{
  "gradient_accumulation_steps": 32,
  "train_micro_batch_size_per_gpu": 32,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.0001,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 1e-05,
      "warmup_max_lr": 1e-04,
      "warmup_num_steps": 1000
    }
  },
  "fp16": {
    "enabled": true
  },
  "gradient_clipping": 1.0,
  "zero_optimization": {
    "stage": 3
  },
  "steps_per_print": 10
}